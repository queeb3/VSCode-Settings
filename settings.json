{
  // file settings
  "files.trimTrailingWhitespace": true,
  "files.autoSaveWhenNoErrors": true,
  "files.defaultLanguage": "csharp",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "afterDelay",

  "dotnet.defaultSolution": "SlitheCore.sln",

  //------------------------------------------------------------------------------

  // debug settings
  "debug.terminal.clearBeforeReusing": true,
  "debug.enableStatusBarColor": true,
  "debug.console.wordWrap": true,

  //------------------------------------------------------------------------------

  // explorer settings
  "explorer.enableDragAndDrop": true,
  "explorer.sortOrder": "filesFirst",
  "explorer.compactFolders": true,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": true,

  //------------------------------------------------------------------------------

  // workspace settings
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "always",

  //------------------------------------------------------------------------------

  // zen settings
  "zenMode.silentNotifications": true,
  "zenMode.hideActivityBar": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "multiple",
  "zenMode.centerLayout": false,
  "zenMode.hideStatusBar": true,
  "zenMode.fullScreen": true,
  "zenMode.restore": true,

  //------------------------------------------------------------------------------

  // window settings
  "window.newWindowDimensions": "inherit",
  "window.commandCenter": true,
  "window.zoomLevel": 0.3,

  //------------------------------------------------------------------------------

  // workbench settings
  "workbench.colorTheme": "Bearded Theme feat. Gold D Raynh",
  "workbench.list.smoothScrolling": true,
  "workbench.iconTheme": "bearded-icons",
  "workbench.sideBar.location": "right",
  "workbench.settings.applyToAllProfiles": [
    "csharp.semanticHighlighting.enabled"
  ],

  //------------------------------------------------------------------------------

  // terminal settings
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorBlinking": true,

  //------------------------------------------------------------------------------

  // editor settings
  "editor.accessibilitySupport": "off",
  "editor.linkedEditing": true,
  // suggestions
  "editor.suggest.selectionMode": "whenTriggerCharacter",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggest.matchOnWordStartOnly": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggest.filterGraceful": true,
  "editor.suggest.insertMode": "insert",
  "editor.suggest.showClasses": true,
  "editor.snippetSuggestions": "top",
  "editor.quickSuggestionsDelay": 5,
  "editor.suggest.showColors": true,
  "editor.suggest.showIcons": true,
  "editor.suggest.preview": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },

  // formatting
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": null,
  "editor.formatOnType": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit"
  },

  // language specific
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {},
  "[c]": {},
  "[cpp]": {},
  "[java]": {},
  "[fsharp]": {},
  "[lua]": {},
  "[python]": {},
  "[sql]": {},
  "[xaml]": {},
  "[yaml]": {},
  "[xml]": {},

  // rendering and highlighting
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.copyWithSyntaxHighlighting": true,
  "editor.renderControlCharacters": true,
  "editor.emptySelectionClipboard": true,
  "editor.padding.bottom": 0,
  "editor.padding.top": 16,
  // font
  "editor.fontFamily": "ProggyClean Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.fontSize": 15,
  // minimap
  "editor.minimap.autohide": true,
  "editor.minimap.enabled": false,
  // white space
  "editor.experimentalWhitespaceRendering": "font",
  "editor.renderWhitespace": "none",
  "editor.trimAutoWhitespace": false,
  // line
  "editor.renderLineHighlightOnlyWhenFocus": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderFinalNewline": "off",
  "editor.lineNumbers": "interval",
  "editor.lineHeight": 15,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 4,
  // cursor
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.cursorSurroundingLines": 20,
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "block",
  // custom textmate token
  "editor.tokenColorCustomizations": {
    "comments": "#53f1ba9f",
    "textMateRules": [
      {
        "scope": "storage.modifier",
        "settings": {
          "foreground": "#cd2f4cca",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "storage.type.accessor",
        "settings": {
          "foreground": "#f6c478d3",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#7afd0ed2"
        }
      }
    ]
  },

  // mouse and scroll
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastColumn": 100,
  "editor.scrollBeyondLastLine": true,
  "output.smartScroll.enabled": true,
  "editor.fastScrollSensitivity": 8,
  "editor.smoothScrolling": true,

  // sticky scroll
  "editor.stickyScroll.defaultModel": "indentationModel",
  "editor.stickyScroll.scrollWithEditor": true,
  "editor.stickyScroll.maxLineCount": 6,
  "editor.stickyScroll.enabled": false,

  //------------------------------------------------------------------------------

  // extension settings
  // remote settings
  "remote.downloadExtensionsLocally": true,
  "remote.tunnels.access.preventSleep": true,

  // errorlens extension
  "errorLens.followCursor": "allLinesExceptActive",
  "errorLens.scrollbarHackEnabled": true,

  // git extension
  "git.autofetch": true,
  "git.autorefresh": true,

  // custom css and javascript to alter appearance of editor
  "vscode_custom_css.imports": [
    "file:///G:/Git%20Repos/Custom%20VScode%20repos/CustomCSS.css",
    "file:///G:/Git%20Repos/Custom%20VScode%20repos/CustomJS.js"
  ],

  // code spell checker extension
  "cSpell.language": "en, en-GB",
  "cSpell.caseSensitive": true,
  "cSpell.userWords": [
    "Avalonia",
    "cooldown",
    "Cooldown",
    "Cooldowns",
    "debuff",
    "debuffs",
    "dont",
    "dotnet",
    "eclass",
    "fizzbuzz",
    "Monokai",
    "nums",
    "omnisharp",
    "Proggy",
    "readwrite",
    "regen",
    "regens",
    "Slithe",
    "subceed",
    "Teehee"
  ],

  // csharp settings
  "omnisharp.organizeImportsOnFormat": true,
  "omnisharp.enableEditorConfigSupport": false,
  "csharp.format.enable": true,
  "csharp.suppressDotnetInstallWarning": true,
  "csharp.semanticHighlighting.enabled": false,
  "dotnet.typeMembers.propertyGenerationBehavior": "preferAutoProperties",
  "dotnet.highlighting.highlightRelatedJsonComponents": false,
  "dotnet.highlighting.highlightRelatedRegexComponents": false
}
